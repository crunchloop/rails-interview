<%= form_with(model: [todo_list, todo_item], id: [todo_list, todo_item]) do |form| %>
  <% if todo_item.errors.any? %>
    <div>
      <% todo_item.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :done %>
  <%= form.check_box :done %>
  <%= form.submit %>
  <%= link_to "Cancel", todo_list_path(todo_list) %>
<% end %>
