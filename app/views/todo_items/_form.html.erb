<div class="card">
  <div class="card-header">
    <h2>New Item</h2>
  </div>
  <div class="card-body">
    <%= form_with(model: [ @todo_item.todo_list, @todo_item ]) do |form| %>
      <% if @todo_item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo item from being saved:</h2>
          <ul>
            <% @todo_item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="form-group field">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div class="form-group field">
        <%= form.label :completed %>
        <%= form.check_box :completed %>
      </div>

      <div class="actions">
        <%= form.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
